<div>
    <!--    <p class="text-right mx-8 mb-2">Title Here ></p>-->
    <div class="bg-eggshell flex flex-col h-full w-full rounded-md shadow-lg p-8">
        <% if (searchQuery == "") { %>
            <h1>Recommendations</h1>
        <% } else { %>
            <h1>Showing results for <%- searchQuery %> </h1>
        <% } %>
            <div class="flex flex-wrap flex-row mx-auto">
                <% recipes.forEach(r => { %>
                    <div class="flex-col m-2 w-1/4">
                        <a href=<%-"/recipes/"+r.id%>>
                            <img class="text-center rounded-md h-48 object-fill" src=<%-r.image%>>
                            <a class="text-center text-sm text-secondary-brown"> <%- r.title %> </a>
                        </a>
                    </div>
                <%  }) %>
            </div>

    </div>
</div>
