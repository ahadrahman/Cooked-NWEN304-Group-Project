<!-- Relied on this source: https://vegibit.com/node-js-mongodb-user-registration/ to learn how to do registration with JWT and MongoDB -->

<html>
    <%- include('./partials/head.ejs') %>
    <body class="h-screen">
        <%- include('./partials/nav.ejs') %>
        <div class="container page-content p-16 bg-white flex mx-auto">
            <div class="bg-eggshell rounded-md py-6 shadow-lg p-8 space-y-4 flex-col justify-center mx-auto">
                <div class="mx-auto space-y-1">
                    <!-- Register fields and inputs -->
                    <p class="text-md">Email</p>
                    <input type="text" id="emailInput" name="email" class="w-full"/>
                </div>

                <div class="space-y-1">
                    <p class="text-md">Password</p>
                    <input type="password" id="passwordInput" name="password" class="w-full"/>

                    <!-- Password complexity bar -->
                    <hr id = "complexityBar" style="border:none; visibility: hidden;" />
                </div>

                <div class="pt-6">
                    <!-- Registration button -->
                    <button id="submitRegistration"
                            class="block bg-primary-lg text-center text-md no-underline text-eggshell mx-auto p-2 px-8 rounded-3xl hover:bg-primary-dg hover:shadow-md">
                        Create Account
                    </button>
                </div>

                <div class="text-primary-dg m-4 text-sm">
                    <!-- Error message that shows due to account already existing with inputted email, password not being complex enough or email being invalid. -->
                    <p id = "errorMessage" style="color:red; visibility: hidden; font-size: 14;"></p>
                </div>

                <div class="pb-4">
                    <a class="m-4 text-sm hover:text-secondary-pink" href="/login">Already have an account?</a>
                </div>
            </div>
        </div>

        <!-- Adding client controller so it can set up listeners for some of the above components. -->
        <script src = "/controller/register.js"></script>
    </body>
</html>
