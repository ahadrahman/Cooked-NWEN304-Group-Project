<html>
    <%- include('./partials/head.ejs') %>
    <body>
        <!-- Example of tailwind css class name -->
        <!-- The '=' indicates to output onto the screen -->
        <h1 class="flex-auto text-xl font-semibold"><%= title %></h1>

        <!-- Below is how you essentially get partials (equiv. to React components). Below gets the nav partial -->
        <%- include('./partials/nav.ejs') %>

        <!-- Below is an example of using variables -->
        <% var example = "Drake" %>
        <p>Hi <%- example %>, how are you?</p>

        <% 
            var items = [{id: 1, name: "Ahad"}, {id: 2, name: "August"}];
            items.forEach(i => { %>
            	<li> <%- i.name %> </li>
        <%  }) %>


    </body>
</html>