<html>
    <%- include('./partials/head.ejs') %>
    <body class="h-screen">
        <%- include('./partials/nav.ejs') %>
        <div class="container page-content p-16 bg-white max-w-md mx-auto">
            <div class="bg-eggshell rounded-md py-6 shadow-lg p-8 space-y-4 flex-col justify-center mx-auto text-center items-center">

                <p>Password Reset</p>

                <div class="mx-auto space-y-1">
                    <p class="text-sm">Enter a new password</p>
                    <input type="password" id="passwordInput" name="password"
                           class="text-sm bg-grey-lightest border-2 border-secondary-brown focus:outline-none focus:ring focus:border-secondary-pink p-0.5 rounded-lg shadow-inner w-full text-black my-4 shadow-md"/>
                    <!-- Password complexity bar -->
                    <hr id = "complexityBar" style="border:none; visibility: hidden;" />
                    <p id = "errorMessage" style="color:red; visibility: hidden; font-size: 14;"></p>
                </div>

                <div class="pt-6">
                    <button id="submitNewPassword"
                            class="block bg-primary-lg text-center text-md no-underline text-eggshell mx-auto p-2 px-8 rounded-3xl hover:bg-primary-dg hover:shadow-md">
                        Submit
                    </button>
                </div>
            </div>
        </div>
        <script src = "/controller/resetPassword.js"></script> 
    </body>
</html>